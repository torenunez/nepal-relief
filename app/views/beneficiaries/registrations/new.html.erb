<div class="container">
<div class="col-md-6 col-md-offset-3">

<h2>Beneficiaries Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :contact_name %><br />
    <%= f.text_field :contact_name, class: "form-control", :placeholder => "i.e. Janet Johnson" %>
  </div>

  <div class="field">
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number, class: "form-control", :placeholder => "i.e. 4228094" %>
  </div>

  <div class="field">
    <%= f.label :contact_email %><br />
    <%= f.email_field :email, class: "form-control", autofocus: true, :placeholder => "i.e. me@email.com" %>
  </div>

  <div class="field">
    <%= f.label :organization_name %><br />
    <%= f.text_field :name, class: "form-control", :placeholder => "i.e. HIMALAYAN RESCUE ASSOCIATION NEPA" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, class: "form-control", :placeholder => "i.e. Dhobichaur, Lazimpat (North Gate of the Royal Palace)" %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: "form-control", :placeholder => "Description...." %><br />
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off",:placeholder => "password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", :placeholder => "password confirmation" %><br />
  </div>



  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
  </div>
<% end %>

<%= render "beneficiaries/shared/links" %>

</div>
</div>