<div class="table-responsive">
  <table class="table table-hover">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Urgency</th>
      <th>Notes</th>
      <th>&nbsp;</th>
    </tr>
    <tr>
      <td><%= @requested_resource.name %></td>
      <td><%= @requested_resource.quantity_remaining %></td>
      <td><%= @requested_resource.urgency %></td>
      <td><%= @requested_resource.notes %></td>
    </tr>
</table>

<h4>How many <%= @requested_resource.name %> would you like to claim?</h4>

<%= form_for [@requested_resource.beneficiary, @requested_resource, @requested_resource.claimed_resources.build] do |f|%>
  <%= f.label :quantity %>
  <%= f.text_field :quantity %>

  <%= f.submit "Submit"%>
<% end %>